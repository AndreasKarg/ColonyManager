<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>



  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <!-- ========================= Work tables ==========================-->

  <ThingDef Name="BenchBase" ParentName="BuildingBase" Abstract="True">
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
  </ThingDef>


  <ThingDef ParentName="BenchBase">
    <DefName>FM_ManagerStation</DefName>
    <label>Manager Station</label>
    <ThingClass>FM.Building_ManagerStation</ThingClass>
    <Description>A simple table with allowing a manager to do his work.</Description>
    <graphicData>
      <texPath>Things/Building/Production/TableButcher</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
    </graphicData>
    <costStuffCount>75</costStuffCount>
    <CostList>
      <WoodLog>20</WoodLog>
    </CostList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <AltitudeLayer>Waist</AltitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <Size>(3,1)</Size>
    <DesignationCategory>Production</DesignationCategory>
    <Passability>PassThroughOnly</Passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <tickerType>Normal</tickerType>
    <comps>
      <li>
        <compClass>CompGlower</compClass>
        <glowRadius>10</glowRadius>
        <glowColor>(255,0,0,0)</glowColor>
      </li>
      <li Class="FM.CompProperties_ManagerStation">
        <compClass>FM.Comp_ManagerStation</compClass>
        <speed>500</speed>
      </li>     
    </comps>
  </ThingDef>

</ThingDefs>